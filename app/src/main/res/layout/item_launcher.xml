<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/img_background"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/round_gray_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

    </ImageView>


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/icon_nova"

        app:layout_constraintBottom_toBottomOf="@id/img_background"
        app:layout_constraintLeft_toLeftOf="@id/img_background"
        app:layout_constraintRight_toRightOf="@id/img_background"
        app:layout_constraintTop_toTopOf="@id/img_background">

    </ImageView>

    <TextView
        android:id="@+id/tv_laucher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova"
        android:layout_marginLeft="28dp"
        android:textSize="17sp"
        android:textColor="@color/color_gray"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        >

    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>